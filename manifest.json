{
    "manifest_version": 2,
    "name": "Loupe",
    "version": "1.0",
    "description": "Highlights occurences of selected word in page.",
    "icons": {
        "96": "icons/loupe-96.png",
        "128": "icons/loupe-128.png",
        "256": "icons/loupe-256.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_title": "Loupe",
        "default_icon": {
            "96": "icons/loupe-96.png",
            "128": "icons/loupe-128.png",
            "256": "icons/loupe-256.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "find",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "loupe.js"
            ]
        }
    ],
    "applications": {
        "gecko": {
            "id": "loupe@scullionw.com"
        }
    }
}